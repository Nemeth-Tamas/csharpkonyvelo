@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="w-100">
            <h1 class="text-center">@ViewData["Title"]</h1>
        </div>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Jelszó</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-1">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Emlékezz rám?
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Bejelentkezés</button>
                </div>
                <div class="mt-1">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Elfelejtett jelszó</a>
                    </p>
                    <p>
                        <a asp-page="./Register" class="mt-1" asp-route-returnUrl="@Model.ReturnUrl">Regisztráció</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" class="mt-1" asp-page="./ResendEmailConfirmation">Email megerősítő újraküldése</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
