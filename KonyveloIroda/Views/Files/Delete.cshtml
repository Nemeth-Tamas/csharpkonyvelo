@model KonyveloIroda.Models.Files

@{
    ViewData["Title"] = "Fájlok - Törlés";
}

<h1>Törlés</h1>

<h3>Biztosan törölni szeretnéd ezt a fájlt?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Törlés" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-warning">Mégsem</a>
    </form>
</div>
